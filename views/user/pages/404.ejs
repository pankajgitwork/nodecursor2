<style>
  body {
    background: #f8fafc;
    color: #22223b;
    font-family: "Segoe UI", Arial, sans-serif;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    margin: 0;
  }

  .container {
    text-align: center;
  }

  .error-code {
    font-size: 8rem;
    font-weight: bold;
    color: #4f8ef7;
    margin-bottom: 0.5rem;
  }

  .message {
    font-size: 2rem;
    margin-bottom: 1.5rem;
  }

  a {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: #4f8ef7;
    color: #fff;
    border-radius: 4px;
    text-decoration: none;
    font-size: 1rem;
    transition: background 0.2s;
  }

  a:hover {
    background: #2563eb;
  }
</style>

<div class="container">
  <div class="error-code"><%= (typeof errorCode === 'undefined') ? '404' : errorCode  %></div>
  <div class="message"><%= (typeof pageTitle === 'undefined') ? 'Oops! Page not found.' : pageTitle  %></div>

  <div class="mt-4">
    <a href="login" class="btn btn-primary">Go To Login</a>
  </div>
</div>
